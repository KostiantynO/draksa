{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedSideEffectImports": true,

    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,

    "noEmit": true,

    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    // "baseUrl": ".",
    // "rootDir": "./src/", need for TS 6.0, but it imports things outside of the src.
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"],
      "@/draksa/*": ["./src/draksa/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",

    // "postcss.config.mjs",
    // "prettier.config.mjs",

    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
